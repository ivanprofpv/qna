$('.answers .answer-error-<%= @answer.id %>').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
  $('.answers .answer-id-<%= @answer.id %>').remove();
  $('.answers').html('<%= j render @question.answers %>');
  var event = new Event('gist:updated');
  document.dispatchEvent(event);
<% end %>
